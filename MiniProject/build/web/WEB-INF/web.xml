<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Operations</servlet-name>
        <servlet-class>essentials.Operations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperationsAdd</servlet-name>
        <servlet-class>essentials.OperationsAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authorize</servlet-name>
        <servlet-class>essentials.Authorize</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>essentials.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminOperations</servlet-name>
        <servlet-class>essentials.AdminOperations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>essentials.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Operations</servlet-name>
        <url-pattern>/Operations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperationsAdd</servlet-name>
        <url-pattern>/OperationsAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Authorize</servlet-name>
        <url-pattern>/Authorize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminOperations</servlet-name>
        <url-pattern>/AdminOperations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
